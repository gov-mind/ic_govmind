# Production Environment Configuration
# Copy this to .env.production and update with your values

# Use backend proxy for secure AI API calls (RECOMMENDED for production)
VITE_USE_BACKEND_PROXY=true

# Your deployed API proxy URL (update with your actual deployment URL)
VITE_BACKEND_PROXY_URL=https://your-api-proxy.vercel.app

# DO NOT set direct API keys in production (they will be visible to users)
# VITE_DEEPSEEK_API_KEY=  # Leave empty - use backend proxy instead

# Development mode: set to false to use direct API calls (for testing only)
# VITE_USE_BACKEND_PROXY=false
